@model List<Car>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

    @foreach (var car in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                <img src=@car.Image class="card-img" alt="...">
            <div class="card-body">
                <h4>@car.Name</h4>
                    <p>@car.Id</p>
                <p class="card-text">@car.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a class="btn btn-primary"
                        asp-area=""
                        asp-controller="Car"
                        asp-action="Index"
                        asp-route-id="@car.Id"
                        role="button">Подробнее</a>
                        <a class=" btn btn-primary" 
                        asp-area=""
                        asp-controller="Rent"
                        asp-action="Add"
                        asp-route-id="@car.Id"
                        role="button">В корзину</a>
                    </div>
                    <small class="text-muted">@car.CostMinute p/мин.</small>
                </div>
            </div>
        </div>
    </div>
    }
</div>
